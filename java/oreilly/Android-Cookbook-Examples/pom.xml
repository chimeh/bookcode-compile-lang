	<modelVersion>4.0.0</modelVersion>
	<prerequisites>
		<maven>3.1</maven>
	</prerequisites>

	<!-- Top-level POM for the Android Cookbook examples. Tries to build them all! -->

	<!-- MAKE SURE you have set ANDROID_SDK_HOME to your sdk install dir -->

