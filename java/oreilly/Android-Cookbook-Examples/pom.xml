	<dependencyManagement>
		<dependencies>
			<!-- Each sub-project POM MUST declare its own Android version dep, to get depends right -->
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>4.12</version>
				<scope>test</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<sourceDirectory>${project.basedir}/src</sourceDirectory>
		<testSourceDirectory>${project.basedir}/test</testSourceDirectory>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>com.simpligility.maven.plugins</groupId>
					<artifactId>android-maven-plugin</artifactId>
					<version>${android.plugin.version}</version>
					<configuration>
						<androidManifestFile>${project.basedir}/AndroidManifest.xml</androidManifestFile>
						<resourceDirectory>${project.basedir}/res</resourceDirectory>
						<disableConflictingDependenciesWarning>true</disableConflictingDependenciesWarning>
						<sdk>
							<platform>16</platform>
						</sdk> 
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven</groupId>
					<artifactId>maven-jar-plugin</artifactId>
					<version>3.0.2</version>
					<configuration>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<!-- Add the Android official "extras" repo, for stuff like compat -->
	<repositories>
		<repository>  
			<id>android-extras-repository</id>  
			<name>Android official local extras Repository</name>  
			<url>file://${ANDROID_SDK_HOME}/extras/android/m2repository</url>  
			<layout>default</layout>  
		</repository>
	</repositories>
</project>
