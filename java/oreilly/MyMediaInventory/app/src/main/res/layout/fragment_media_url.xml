<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/media_url"
        style="@style/MajorDetailStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:ems="10"
        android:hint="@string/media_url_hint" >

        <requestFocus />
    </EditText>
    
   <EditText
        android:id="@+id/media_url_desc"
        style="@style/MajorDetailStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/media_url_desc_hint" />
 
   <Button
        android:id="@+id/update_url_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/update_url_button_text" />
    
   <Button
        android:id="@+id/display_url_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/display_url_button_text" />

</LinearLayout>